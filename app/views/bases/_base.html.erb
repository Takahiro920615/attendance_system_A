<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
    <%= form_with(model: @base, url: basis_path(@base), local: true) do |f|%>
   
    
      <%= f.label :base_no, class: "label-base--edit" %>
      <%= f.text_field :base_no, class: "form-control" %>
      
      <%= f.label :base_name, class: "label-base--edit"%>
      <%= f.text_field :base_name, class: "form-control"%>
      
      <%= f.label :attendance_type, class: "label-base--edit"%>
      <%= f.text_field :attendance_type, class: "form-control" %>
    
    <%= f.submit "更新", class: "btn btn-primary btn-block btn-base--edit" %>
    <% end %>
  </div>
</div