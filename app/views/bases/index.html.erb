<% provide(:title,"拠点")%>

<h1>拠点一覧</h1>
  <div class = "container">
    <table class = "table table-bordered table-striped" id="base_table">
      <thead>
        <tr>
          <th colspan = "2"></th>
          <th colspan = "2"></th>
          <th>拠点番号</th>
          <th>拠点名</th>
          <th>勤怠種類</th>
        </tr>
        <% @bases.each do |base|%>
        <tbody>
        <tr>
          <td colspan = "2"><%= link_to "修正",edit_basis_path(base), class: "btn btn-primary" %></td>
          <td colspan = "2"><%= link_to "削除",base, method: :delete, data: {confirm: "削除してよろしいですか？"}, 
          class: "btn btn-primary"%></td>
          <td><%= base.base_no %></td>
          <td><%= base.base_name%></td>
          <td><%= base.attendance_type%></td>
        </tr>
        </tbody>
        <% end %>
        
      </thead>
    </table>
   
    <div class = "panel panel-default">
      <div class = "panel-heading">
        <h4 class = "panel-title">
          <button type = "button" class = "btn btn-lg btn-primary" data-toggle="collapse" data-target="#collapse" >拠点情報追加</button>
        </h4>
      </div>
      <div id = "collapse" class="panel-collapse collapse out">
        <div class ="panel-body">
          <%= render 'bases/form_index'%>
        </div>
      </div>
    </div> 
</div>

