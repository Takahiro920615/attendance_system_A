
<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h1 class="modal-title">残業申請</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <%= form_with(model: @user, url: update_overtime_approval_user_attendance_path(@user), local: true, method: :patch) do |f|%>
            <% @attendances.each do |id, attendances| %>
              <% user = User.find(id)%>
              <h1 class="modal-title"><%= "[#{user.name}からの残業申請]"%></h1>
                <table class="table table-bordered table-condensed table-hover" id="table-attendances">
                  <thead>
                    <tr>
                      <th rowspan="2">日付</th>
                      <th rowspan="2">曜日</th>
                      <th colspan="2">終了予定時刻</th>
                      <th colspan="2">指定勤務終了時間</th>
                      <th rowspan="2">時間外時間</th>
                      <th rowspan="2">残業理由</th>
                      <th rowspan="2">指示者確認印</th>
                      <th rowspan="2">変更</th>
                      <th rowspan="2">勤怠を確認する</th>
                    </tr>
                    <tr>
                      <th>時</th>
                      <th>分</th>
                      <th>時</th>
                      <th>分</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% attendances.each do |day| %>
                      <%= f.ields_for"attendances[]", day do |attendance|%>
                        <tr>
                          <td><%= l(day.worked_on, format: :short)%></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                        </tr>
                      <% end %>
                    <% end %>
                  </tbody>
                </table>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

