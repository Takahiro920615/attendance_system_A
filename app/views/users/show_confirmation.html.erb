<div class = "show_body">
  <table class = "table table-bordered table-condensed table-hover" id= "table-attendaces">
    <thead>
      <tr>
        <th rowspan = "3">残業申請</th>
        <th rowspan = "3">日付</th>
        <th rowspan = "3">曜日</th>
        <th rowspan = "3">出勤退勤登録</th>
        <th colspan = "6">実績</th>
        <th colspan = "5" >所定外勤務</th>
      </tr>
      <tr>
        <td colspan = "2">出社</td>
        <td colspan = "2">退社</td>
        <td rowspan = "2">在社時間</td>
        <td rowspan = "2">備考</td>
        <td colspan = "2">終了予定時間</td>
        <td rowspan = "2">時間外時間</td>
        <td rowspan = "2">業務処理内容</td>
        <td rowspan = "2" >指示者確認印</td>
      </tr>
      <tr>
        <td>時</td>
        <td>分</td>
        <td>時</td>
        <td>分</td>
        <td>時</td>
        <td>分</td>
      </tr>
    </thead>
        <tbody>
          <% @attendances.each do |day| %>
          <tr>
            <td></td>
            <td><%= l(day.worked_on,format: :short) %></td>
            <td><%= $days_of_the_week[day.worked_on.wday] %></td>
             <td></td>
            <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
            <td><%= l(day.started_at.floor_to(15.minutes),format: :minute) if day.started_at.present? %></td>
            <td><%= l(day.finished_at,format: :hour) if day.finished_at.present? %></td>
            <td><%= l(day.finished_at.floor_to(15.minutes),format: :minute) if day.finished_at.present? %></td>
            <td>
              <% if day.started_at.present? && day.finished_at.present?%>
                <%= str_time = working_times(day.started_at, day.finished_at) %>
              <% end %>
            </td>
            <td><%= day.note %></td>
            <td><%=l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
            <td><%=l(day.finished_at, format: :minute) if day.finished_at.present?%></td>
            <td>
              
            </td>
            <td><%= day.reason_for_application%></td>
            <td>
               <% if day.request_overtime_status == "申請中"%>
                 <%="#{day.overtime_request_superior}へ残業#{day.request_overtime_status}" %><br>
               <% elsif (day.request_overtime_status == "承認") || (day.request_overtime_status =="否認") %>
                <%= "#{day.overtime_request_superior}より残業#{day.request_overtime_status}"%><br>
               <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
       
        <tfoot>
         <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td colspan = "6"></td>
          <td></td>
          <td></td>
          <td>
           <div class = "application-form">
          
            </div>
           </td>
    </tfoot>
  </table> 
</div>