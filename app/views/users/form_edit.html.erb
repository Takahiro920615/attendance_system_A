<h1>ユーザー情報の更新</h1>

<div class = "row">
  <div class = "col-md-6 col-md-offset-3">

<%= form_with(model: @user, local: true, method: :patch) do |f| %>
  <%= render 'shared/error_messages', object: @user%>
  
  <%= f.label :name, class: "label-#{yield(:class_text)} label-title"%>
  <%= f.text_field :name, class: "form-control" %>
  
  <%= f.label :email, class: "label-#{yield(:class_text)} label-title"%>
  <%= f.email_field :email, class: "form-control" %>
  
  <%= f.label :department, class: "label-#{yield(:class_text)} label-title"%>
  <%= f.text_field :department, class: "form-control" %>
  
  <%= f.label :password, class: "label-#{yield(:class_text)} label-title"%>
  <%= f.password_field :password, class: "form-control" %>
  
  <%= f.label :password_confirmation, class: "label-#{yield(:class_text)} label-title"%>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  
  <%= f.submit "編集する", class: "btn btn-primary btn-block btn-edit" %>
<% end %>
  </div>
</div>