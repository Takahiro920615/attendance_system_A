<% provide(:title, @user.name) %>

<div class = "user_show_container">
  <table class = "table table-bordered table-condensed table-hover user-table">
    <thead>
        <tr>  
          <th><%= link_to "⬅️️", user_path(date: @first_day.prev_month), class: "btn btn-info" %>
          <%= l(@first_day, format: :middle)%>　時間管理表
           <%= link_to "➡️",user_path(date: @first_day.next_month), class: "btn btn-info"%>
          </th>
          <th>
          <h5>指定勤務開始時間　　<%= l(@user.designated_work_start_time, format: :time)%></h5>
          <h5><p>指定勤務終了時間　　<%= l(@user.designated_work_end_time, format: :time) %></p></h5>
          </th>
          <th colspan= "3">基本時間　　<%=l(@user.basic_time, format: :time)%></th>
          <th>初日<%= l(@first_day, format: :short)%></th>
        </tr>
    </thead>
    <tbody>
        <tr>
          <td>所属：<%= @user.department.present? ? @user.department: "未所属" %></td>
          <td>氏名：<%= @user.name %></td>
          <td>コード</td>
          <td><%= @user.uid%></td>
          <td>出勤日数<%= @worked_on%></td>
          <td>締日<%= l(@last_day, format: :short)%></td>
        </tr>
    </tbody>
  </table>
</div>

<div>
  <% if @user.superior && current_user == @user %>
   <% if  @one_month_approval_sum > 0 %>
    <%= link_to "[ 所属長承認申請のお知らせ ]", edit_one_month_approval_user_attendance_path(@user), remote: true, class: "notice-color" %>
    <span style="border: solid 3px red;"><%= link_to "#{@one_month_approval_sum}件の通知があります", edit_one_month_approval_user_attendance_path(@user), remote: true, class: "notice-color" %></span><br>
   <% else %>
    <%= "[ 所属長承認申請のお知らせ ]" %><br>
   <% end %>
   <% if @attendances_sum > 0 %>
     <%=link_to "[  勤怠変更申請のお知らせ ]",edit_attendance_change_approval_user_attendance_path(@user), remote: true, class: "notice-color" %>
     <span style="border: solid 3px red;"><%= link_to "#{@attendances_sum}件の通知があります",edit_attendance_change_approval_user_attendance_path(@user), remote: true, class: "notice-color"%></span><br>
   <% else %>
     <%= "[勤怠変更申請のお知らせ]"%><br>
   <% end %>
   <% if @attendance_overtime_sum > 0%>
     <%=link_to "[ 残業申請のお知らせ]",edit_overtime_approval_user_attendance_path(@user), remote: true, class: "notice-color"%>
     <span style="border: solid 3px red;"><%= link_to "#{@attendance_overtime_sum}件の通知があります",edit_overtime_approval_user_attendance_path(@user), remote: true, class: "notice-color" %><br>
   <% else %>
     <%= "[残業申請のお知らせ]"%>
   <% end %>
  <% end %>
</div>



<!----- ボタン箇所--->
 <div class = "btn-user-show">
   <%= link_to "勤怠編集",attendances_edit_one_month_user_path(date:@first_day), class: "btn btn-primary"%>
   <%= link_to "CSV出力", user_path(format: :csv), class: "btn btn-primary"%>
   <p><%= link_to "勤怠修正ログ",attendance_log_user_attendance_path(@user.attendances), class: "btn btn-primary btn-md"%></p>
  </div>


<div class = "show_body">
  <table class = "table table-bordered table-condensed table-hover" id= "table-attendaces">
    <thead>
      <tr>
        <th rowspan = "3">残業指示</th>
        <th rowspan = "3">日付</th>
        <th rowspan = "3">曜日</th>
        <th colspan = "6">実績</th>
        <th colspan = "7" >所定外勤務</th>
      </tr>
      <tr>
        <td colspan = "4">出社</td>
        <td colspan = "2">退社</td>
        <td rowspan ="2">在社時間</td>
        <td rowspan = "2">備考</td>
        <td colspan = 2>終了予定時間</td>
        <td rowspan = "2">時間外時間</td>
        <td rowspan = "2">業務処理内容</td>
        <td rowspan = "2">指示者確認印</td>
      </tr>
      <tr>
        <td>時</td>
        <td>分</td>
        <td colspan ="2">勤怠ボタン</td>
        <td>時</td>
        <td>分</td>
        <td>時</td>
        <td>分</td>
      </tr>
    </thead>
        <tbody>
          <% @attendances.each do |day| %>
            <% user = day.user%>
          <tr>
            <td><%= link_to '残業申請', edit_overtime_request_user_attendance_path(@user,day), remote: true, class: "btn btn-primary"%></td>
            <td><%= l(day.worked_on,format: :short) %></td>
            <td><%= $days_of_the_week[day.worked_on.wday] %></td>
            <td><%= l(day.started_at, format: :hour) if day.started_at.present?%></td>
            <td><%= l(day.started_at, format: :minute) if day.started_at.present?%></td>
            <td colspan = "2">
               <% if btn_text = attendance_state(day) %>
                 <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
               <% end %>
            </td>
            <td><%= l(day.finished_at, format: :hour) if day.finished_at.present?%></td>
            <td><%= l(day.finished_at, format: :minute) if day.finished_at.present?%></td>
            <td><%= working_times(day.started_at, day.finished_at, day.change)%></td>
            <td><%= day.note%></td>
            <td><%= l(day.change_end_time, format: :hour) if day.change_end_time.present?%></td>
            <td><%= l(day.change_end_time, format: :minute) if day.change_end_time.present?%></td>
            <td><%= overtime_culculation(day.change_end_time, user.designated_work_end_time, day.overtime_next_day) if day.change_end_time.present?%></td>
            <td><%= day.reason_for_application %></td>
            <td>
              <% if day.request_overtime_status == "申請中" %>
                <%= "#{day.overtime_request_superior}へ残業#{day.request_overtime_status}"%>
              <% elsif day.request_overtime_status =="承認" || day.request_overtime_status == "否認" %>
                <%= "#{day.overtime_request_superior}より残業#{day.request_overtime_status}"%>
              <% end %>
              <% if day.attendance_approval_status == "申請中"%><br>
                <%= "#{day.attendances_request_superiors}へ勤怠変更#{day.attendance_approval_status}"%><br>
              <% elsif day.attendance_approval_status == "承認" || day.attendance_approval_status == "否認"%><br>
                <%= "#{day.attendances_request_superiors}より勤怠変更#{day.attendance_approval_status}"%><br>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
       
        <tfoot>
         <tr>
          <td></td>
          <td>日数</td>
          <td colspan ="7">総合勤務時間</td>
          <td>累計在社時間</td>
          <td rowspan = "3"></td>
          <td rowspan = "3"></td>
          <td rowspan = "3"></td>
          <td rowspan = "3"></td>
           <td rowspan = "3"></td>
          <td rowspan = "3">
           <div class = "application-form">
            <% if current_user %>
              <% day = @user.attendances.find_by(worked_on: @first_day)%>
              <% if day %>
                <%= form_with(model: @user, url: attendances_update_one_month_request_user_path(@user), local: true, method: :patch) do |f| %>
                  <%= f.fields_for "attendances[]", day do |attendance|%>
                    <%= "所属長承認: "%>
                      <% if day.one_month_approval_status.nil? && day.one_month_request_status.nil?%>
                        <%= "末" %><br>
                      <% elsif day.one_month_request_status == "申請中"%>
                        <%= "#{day.one_month_request_boss}へ#{day.one_month_request_status}" %><br>
                      <% elsif (day.one_month_approval_status =="承認") || (day.one_month_approval_status =="否認") %>
                        <%="#{day.one_month_request_boss}から#{day.one_month_approval_status}済" %><br>
                      <% end %>
                    <%= attendance.collection_select :one_month_request_boss, @superiors, :name, :name, { include_blank: true }, required: true %>  
                  <% end %>
                    <br><%= f.submit "申請", class: "btn btn-primary" %></br>
                <% end %>
              <% end %>
            <% end %>
            </div>
           </td>
         </tr>
           <td></td>
           <td><%= @attendances.count%></td>
           <td colspan = "7"><%=format_basic_info(@user.work_time).to_f* @worked_sum%></td>
           <td><%= format("%.2f", @total_working_times.to_f) %></td>
         <tr>
         </tr>
    </tfoot>
  </table> 
</div>
